{
    "dataset_reader": {
      "type": "semeval_reader",
      "max_tokens": 128
    },
    "train_data_path": "dataset/train/",
    "validation_data_path": "dataset/test/SemEval2017-task4-dev.subtask-A.english.txt",
    "model": {
      "type": "bert_classifier",
      "text_field_embedder": {
        "token_embedders": {
          "tokens": {
            "type": "pretrained_transformer",
            "model_name": "bert-base-uncased",
            "max_length": 128
          }
        }
      },
      "feedforward": {
        "input_dim": 768,
        "hidden_dims": [768, 384],
        "activations": ["relu", "relu"],
        "dropout": [0.2, 0.2]
      },
      "dropout": 0.1
    },
    "data_loader": {
      "batch_sampler": {
        "type": "bucket",
        "batch_size": 16
      }
    },
    "trainer": {
      "optimizer": {
        "type": "huggingface_adamw",
        "lr": 2e-5,
        "weight_decay": 0.01,
        "parameter_groups": [
          [["bias", "LayerNorm\\.weight", "layer_norm\\.weight"], {"weight_decay": 0}]
        ]
      },
      "learning_rate_scheduler": {
        "type": "slanted_triangular",
        "num_epochs": 3,
        "cut_frac": 0.1
      },
      "validation_metric": "+f1_measure",
      "num_epochs": 3,
      "patience": 2,
      "cuda_device": 0,
      "checkpointer": {
        "num_serialized_models_to_keep": 1
      }
    }
  }